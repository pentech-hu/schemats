{
  "compilerOptions": {
    "rootDir": "src",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015"],
    "noImplicitAny": true,
    "declaration": true,
    "strictNullChecks": true,
    "newLine": "LF",
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "lib"
  },
  "include": ["src"],
  "exclude": ["dts", "test/actual", "test/expected", "test/fixture"]
}
